{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true
  },
  "compileOnSave": true,
"include": [
        "src/**/*"
    ],
  "exclude": [
    "tests/**",
    "dist/**"
  ],
  "references": [
    {
      "path": "../shared"
    }
  ]
}
